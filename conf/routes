
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Address routing
GET     /address/add                controllers.AddressController.addAddress
POST    /address/addhandle/:id      controllers.AddressController.addAddressHandle(id: Long)
GET     /address/update/:id         controllers.AddressController.updateAddress(id: Long)
PUT     /address/updatehandle       controllers.AddressController.updateAddressHandle
GET     /address/delete/:id         controllers.AddressController.deleteAddress(id: Long)
GET     /address/all                controllers.AddressController.getAllAddresses
GET     /address/:id                controllers.AddressController.getAddress(id: Long)

# Cart routing
GET     /cart/add                   controllers.CartController.addCart
POST    /cart/addhandle/:id         controllers.CartController.addCartHandle(id: Long)
GET     /cart/update/:id            controllers.CartController.updateCart(id: Long)
PUT     /cart/updatehandle          controllers.CartController.updateCartHandle
GET     /cart/delete/:id            controllers.CartController.deleteCart(id: Long)
GET     /cart/all                   controllers.CartController.getAllCarts
GET     /cart/:id                   controllers.CartController.getCart(id: Long)

# Category routing
